{
  "name": "home-inventory",
  "version": "0.0.0-alpha",
  "scripts": {
    "format:quick": "pretty-quick --staged --pattern \"**/*.{js,jsx,ts,tsx,md,css,json}\"",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,css,json}\" --ignore-path .gitignore",
    "lint": "eslint . --ext .ts,.js,.tsx,.jsx",
    "dev:api": "npm run api:migrate && cd api &&  npm run dev",
    "api:migrate": "cd api && npx prisma migrate dev",
    "start:api": "cd api && npm run start",
    "start:client": "cd client && npm run prod",
    "test-tsc:client": "cd client && tsc --noEmit",
    "test-tsc:api": "cd api && tsc --noEmit",
    "prepare": "husky install"
  },
  "license": "MIT",
  "devDependencies": {
    "@casper124578/eslint-config": "^0.0.14",
    "@casper124578/eslint-config-next": "^0.0.2",
    "@casper124578/eslint-config-react": "^0.0.5",
    "eslint": "^7.28.0",
    "husky": "^6.0.0",
    "prettier": "^2.3.1",
    "pretty-quick": "^3.1.0",
    "typescript": "^4.3.2"
  }
}
