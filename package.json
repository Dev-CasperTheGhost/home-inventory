{
  "name": "home-inventory",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "packageManager": "yarn@3.0.2",
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "format:quick": "pretty-quick --staged --pattern \"packages/**/*.{js,jsx,ts,tsx,md,css,json}\"",
    "format": "prettier --write \"packages/**/*.{js,jsx,ts,tsx,md,css,json}\" --ignore-path .gitignore",
    "lint": "eslint . --ext .ts,.js,.tsx,.jsx",
    "test-tsc:client": "cd client && tsc --noEmit",
    "test-tsc:api": "cd api && tsc --noEmit",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@casper124578/eslint-config": "^1.0.0",
    "@casper124578/eslint-config-next": "^1.0.0",
    "@casper124578/eslint-config-react": "^0.1.2",
    "eslint": "^7.32.0",
    "husky": "^7.0.4",
    "prettier": "^2.5.0",
    "pretty-quick": "^3.1.2",
    "typescript": "^4.5.2"
  }
}
